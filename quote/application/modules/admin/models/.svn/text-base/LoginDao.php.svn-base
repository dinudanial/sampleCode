<?php

class admin_Model_LoginDao extends Zend_Db_Table_Abstract
{
    protected $_name='Admin';
    protected $_primary = 'ID_Admin';
    
    public function save(array $loginDetails){
         $username= $loginDetails['d__UserName'];
         $password=$loginDetails['d__Password'];
         $select=  $this->select()
                   ->where('d__UserName=?',$username)   
                   ->where('d__Password=?',$password);
         $stmt=$select->query();
         $result=$stmt->fetchAll();
         $count=$stmt->rowCount();
         return $count;
    }
}

