<?php

class admin_Form_NewCurrency extends Zend_Form
{

    public function init()
    {
        $baseUrl= Zend_Controller_Front::getInstance()->getBaseUrl();
        $this->setAction($baseUrl."/admin/Currency/savecurrency");
        $this->setMethod("post");
        $this->setAttrib("id","saveCurrency");
        $this->setAttrib("class","form");
        
        $currencyName=new Zend_Form_Element_Text("currencyname");
        $currencyName->setLabel("Name");
        
        $code=New Zend_Form_Element_Text("currencycode");
        $code->setLabel("Code");
        
        $symbol=new Zend_Form_Element_Text("symbol");
        $symbol->setLabel("Symbol");
        
        $symbolHTML= new Zend_Form_Element_Text("symbolhtml");
        $symbolHTML->setLabel("Symbol HTML");
        
        $paddingCharacter=new Zend_Form_Element_Text("paddingcharacter");
        $paddingCharacter->setLabel("Padding Charecter");
        
        $symbolposition=new Zend_Form_Element_Select("symbolposition");
        $symbolposition->addMultiOptions(array("select"=>"","before"=>"before","after"=>"after"));
        $symbolposition->setLabel("Symbol Position");
        
        
        $baseCurrency= new Zend_Form_Element_Checkbox("basecurrency");
        $baseCurrency->setLabel("Base Currency");
        
        $priority=new Zend_Form_Element_Checkbox("priority");
        $priority->setLabel("Priority");
        
        $hiddenid=new Zend_Form_Element_Hidden("hiddenid");
        
        $this->addElements(array($currencyName,$code,$symbol,$symbolHTML,$symbolposition,$paddingCharacter,$baseCurrency,$priority,$hiddenid));
        
    }


}

