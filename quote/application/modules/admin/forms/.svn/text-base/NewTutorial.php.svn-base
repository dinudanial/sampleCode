<?php

class admin_Form_NewTutorial extends Zend_Form
{

    public function init()
    {
        $this->setAttrib('enctype', 'multipart/form-data');
        $baseUrl=  Zend_Controller_Front::getInstance()->getBaseUrl();
        $this->setAction($baseUrl."/admin/Tutorials/savetutorial");
        $this->setMethod("post");
        $this->setAttrib('id', "saveTutorial");
        $this->setAttrib("class", "form");
        
        $tutorialName=new Zend_Form_Element_Text("tutorialname");
        $tutorialName->setLabel("Tutorial Name");
        
        $turialGroup= new Zend_Form_Element_Select('tutorialgrouptutorial');
        $tGroups=array();
        $t= new admin_Model_TutorialGroup();
        $tGroups=$t->getTutorialGroupList();
      
        $tGroups[0]="select";
        ksort($tGroups);
      
        $turialGroup->addMultiOptions($tGroups);
        $turialGroup->setLabel("Tutorial Group");
        
       
        
        $dateUploaded= new Zend_Form_Element_Text("dateuploaded");
        $dateUploaded->setLabel("Date Uploaded");
        
        
        $htmlFile=new Zend_Form_Element_File("htmlfile");
        $htmlFile->setLabel("Html Files");
        
        $pdf=new Zend_Form_Element_File("pdffile");
        $pdf->setLabel("Pdf Files");
        
        $hidden=new Zend_Form_Element_Hidden("hiddenid");
        
        $this->addElements(array($tutorialName,$turialGroup,$dateUploaded,$htmlFile,$pdf,$hidden))  ;
        
    }


}
