<?php
class admin_Form_Webnews extends Zend_Form {
	public function init(){
		$baseUrl = Zend_Controller_Front::getInstance()->getBaseUrl();
		$this->setAction($baseUrl.'/admin/Webnews/save');
        $this->setMethod('post');
        $this->setAttrib('id','webnewsForm');
        $this->setAttrib('class','form');
        
        $date = new Zend_Form_Element_Text('newsDate');
        $date->setLabel('Date')
        	->setAttrib('readonly', 'readonly');
          
                
        $headline = new Zend_Form_Element_Text('headline');
        $headline->setLabel('Headline')
                ->addFilter('StripTags');
        
        $content = new Zend_Form_Element_Textarea('content');
        $content->setLabel('Content')
                ->addFilter('StringTrim')
                ->setAttrib('COLS', '38')
                ->setAttrib('ROWS', '3');
         $hidden=new Zend_Form_Element_Hidden("newsid");
        
        $this->addElements(array($date,$headline,$content,$hidden));
	}
}